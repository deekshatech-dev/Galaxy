
@{
    /**/

    ViewBag.Title = "UploadNmf";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">Import Map Records</div>
    <div class="panel-body">
        @using (Html.BeginForm("Index", "Upload", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @section scripts
                {
                @if (ViewBag.UploadStatus != null)
                {
                    if (ViewBag.UploadStatus == "Success")
                    {
                        <script>
                            $(document).ready(function () {
                                toastr.success('File records are imported successfully.');
                            });
                        </script>
                    }
                    else if (ViewBag.UploadStatus == "InvalidFileType")
                    {
                        <script>
                            $(document).ready(function () {
                                toastr.error('Invalid File Type. Please upload only *.nmf file.');
                            });
                        </script>
                    }
                    else
                    {
                        <script>
                            $(document).ready(function () {
                                toastr.error('Error! File records are not imported.');
                            });
                        </script>
                    }
                }
            }
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label"></label>

            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Upload your nmf file</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" id="file" name="file" accept=".nmf">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Upload File</button>
                </div>
            </div>
        }
    </div>
</div>